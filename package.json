{
  "name": "setup-polly-jest",
  "version": "0.6.0",
  "description": "Setup helper for PollyJS when using in jest/jasmine test environment",
  "main": "index.js",
  "scripts": {
    "build": "babel src --out-dir lib",
    "test": "npm run build && npm run test:jest && npm run test:jasmine",
    "test:jest": "jest",
    "test:jasmine": "NODE_ENV=test jasmine",
    "prepare": "npm run build && npm run test:jest && npm run test:jasmine",
    "prepublishOnly": "npm run prepare"
  },
  "files": [
    "LICENSE",
    "README.md",
    "index.js",
    "lib"
  ],
  "keywords": [
    "polly",
    "pollyjs",
    "jest",
    "jasmine",
    "test",
    "testing",
    "mock",
    "helper"
  ],
  "author": "Sergey Petushkov <petushkov.sergey@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@pollyjs/adapter-node-http": "*",
    "@pollyjs/core": "*",
    "@pollyjs/persister-fs": "*",
    "core-js": "^3.2.1",
    "eslint": "^5.6.1",
    "jasmine": "*",
    "jest": "*",
    "node-fetch": "^2.2.0",
    "prettier": "^1.14.3"
  },
  "peerDependencies": {
    "@pollyjs/core": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gribnoysup/setup-polly-jest"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/jest/**/*.test.js"
    ],
    "testRunner": "jasmine2"
  }
}
